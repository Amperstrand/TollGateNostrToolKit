
config opennds
	option enabled 1
	option debuglevel '3'
	option fwhook_enabled '1' # It is required for OpenWrt Firewall 4 NFT (OpenWrt 22.03.0 and later)
	option gatewayinterface 'br-lan'
	option gatewayname 'TollGate'
	option fasport '80'
	option faspath '/cgi-bin/bitcoin-fas.cgi'
	option fasremotefqdn 'helsinki.orangesync.tech'
	option fasremoteip '37.27.205.50'
	option fas_secure_enabled '1'
	option faskey 'b37a6672d84622b262b8336fd283e670e2b80b75a520c1e711204b881e4c466a'
	option fasremotessl 'yes'

	# Walled Garden configuration
	list preauthenticated_users 'allow tcp port 80 to helsinki.orangesync.tech'
	list preauthenticated_users 'allow tcp port 443 to helsinki.orangesync.tech'
	
	# Ensure DNS resolution works before authentication
	option preauth_dns_enable '1'
	option preauthdns '1'
